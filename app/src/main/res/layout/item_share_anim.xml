<?xml version="1.0" encoding="utf-8"?>

<com.eericxu.cslibrary.CSLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_layout"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="50dp"
    app:cs_clip="15dp"
    app:cs_corner="15dp"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/block40"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_1" />

    <TextView
        android:id="@+id/tv_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="拉卡时间的看法"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</com.eericxu.cslibrary.CSLayout>
